<% include ../partials/header %>
<div class='panel panel-default'>
<div class="panel-heading">Workouts near San Diego:</div>
<table class='table'>
    <tr>
        <th>ID</th>
        <th>Activity</th>
        <th>Description</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Days</th>
        <th>Start Time</th>
        <th>Duration</th>
    </tr>
    <% activities.forEach(function(activity){ %>
        <tr>
            <td><%=activity.ID%></a></td>
            <td><a href="/activity/<%=activity.ID%>/edit"><%=activity.Title%></a></td>
            <td><%=activity.Description%></td>
            <td><%=activity.Address%></td>
            <td><%=activity.City%></td>
            <td><%=activity.State%></td>
            <td><%=activity.Zip%></td>
            <% var whatDays = []; %>
                    <%if(activity.Sunday == 1){%>
                    <% whatDays.push('Su'); %>
                    <%}%>
                    <%if(activity.Monday == 1){%>
                    <% whatDays.push('Mo'); %>
                    <%}%>
                    <%if(activity.Tuesday == 1){%>
                    <% whatDays.push('Tu'); %>
                    <%}%>
                    <%if(activity.Wednesday == 1){%>
                    <% whatDays.push('We'); %>
                    <%}%>
                    <%if(activity.Thursday == 1){%>
                    <% whatDays.push('Th'); %>
                    <%}%>
                    <%if(activity.Friday == 1){%>
                    <% whatDays.push('Fr'); %>
                    <%}%>
                    <%if(activity.Saturday == 1){%>
                    <% whatDays.push('Sa'); %>
                    <%}%>
                    
            <td><%=whatDays%></td>

            <td id='starttime'><%=activity.StartTime%></td>
            <td><%=activity.Duration%></td>
        </tr>
        <%});%>
    </table>

    </div>


    <% include ../partials/footer %>